</nav>

<!-- Main Content Section -->
<section class="bg-primary text-white d-flex align-items-center justify-content-center" style="height: 100vh; background-image: url('images/background.jfif'); background-size: cover;">
    <div class="container text-center">
        <h1 class="display-4">Welcome to the GoBus</h1>
        <p class="lead mb-4">Find, book, and manage your bus tickets with ease</p>
        <NavLink class="btn btn-light btn-lg" href="/bus-search">Start Searching</NavLink>
    </div>
</section>

<style>
    .content {
        padding: 0px !important;
    }

    

    /* Customizing the navbar */
    .navbar {
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 10;
    }

    .navbar-dark .navbar-nav .nav-link {
        color: #fff;
    }

    .navbar-dark .navbar-nav .nav-link:hover {
        color: #f8f9fa;
    }
</style>

